{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "bun install && bun run build",
    "watchPatterns": [
      "apps/web/**",
      "packages/types/**"
    ]
  },
  "deploy": {
    "startCommand": "bun run preview --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "ON_FAILURE"
  }
}
